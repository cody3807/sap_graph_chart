<mvc:View xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns="sap.suite.ui.commons" 
    
    controllerName="aemmanagement.project1.controller.TaskDetails">
    <m:Page title="Task Details">
        <m:IconTabBar>
            <!-- Tab for Table -->
            <m:items>
                <m:IconTabFilter text="Table View">
                    <m:Table id="taskDetailsTable" growing="true" alternateRowColors="true" items="{/filteredResults}">
                        <m:columns>
                            <m:Column>
                                <m:Text text="Extension Task ID" />
                            </m:Column>
                            <m:Column>
                                <m:Text text="Project ID" />
                            </m:Column>
                            <m:Column>
                                <m:Text text="Version" />
                            </m:Column>
                            <m:Column>
                                <m:Text text="Hierarchy" />
                            </m:Column>
                            <m:Column>
                                <m:Text text="Task Name" />
                            </m:Column>
                            <m:Column>
                                <m:Text text="Parent Node" />
                            </m:Column>
                            <m:Column>
                                <m:Text text="Level" />
                            </m:Column>
                            <m:Column>
                                <m:Text text="TBB Name" />
                            </m:Column>
                        </m:columns>
                        <m:items>
                            <m:ColumnListItem>
                                <m:cells>
                                    <m:Text text="{ET_Id}" />
                                    <m:Text text="{Projectid}" />
                                    <m:Text text="{Version}" />
                                    <m:Text text="{Hierachy}" />
                                    <m:Text text="{TaskName}" />
                                    <m:Text text="{ParentNode}" />
                                    <m:Text text="{Level}" />
                                    <m:Text text="{tbbname}" />
                                </m:cells>
                            </m:ColumnListItem>
                        </m:items>
                    </m:Table>
                </m:IconTabFilter>

                <!-- Tab for Process Flow -->
                <m:IconTabFilter text="Process Flow">
                    <m:Button text="Export as Image" press="onExportAsImage" />
                    <!-- <m:Button text="Export as PDF" press="onExportAsPDF" /> -->


                    <ProcessFlow id="processFlow" scrollable="true" foldedCorners="true" 
                    
                    nodes="{processFlow>/nodes}" class="centerNodes" showLabels="false" lanes="{processFlow>/lanes}">
                        <nodes>
                            <ProcessFlowNode laneId="{processFlow>lane}" nodeId="{processFlow>id}" title="{processFlow>title}" titleAbbreviation="{processFlow>titleAbbreviation}" children="{processFlow>children}" state="{processFlow>state}" stateText="{processFlow>stateText}" texts="{processFlow>texts}" highlighted="{processFlow>highlighted}" focused="{processFlow>focused}" />
                        </nodes>
                        <lanes>
                            <ProcessFlowLaneHeader laneId="{processFlow>id}" iconSrc="{processFlow>icon}" text="{processFlow>label}" position="{processFlow>position}" />
                        </lanes>
                    </ProcessFlow>

                </m:IconTabFilter>


<m:IconTabFilter text="Network Graph">
                    <m:Button text="Export as Image" press="onExportAsImage2" />

                <networkgraph.Graph
                    id="networkGraph"
                    height="800px"
                    width="auto"
                    nodes="{network>/nodes}"
                    lines="{network>/lines}">
                    <nodes>
                        <networkgraph.Node 
                            key="{network>key}"
                            title="{network>title}" 
                            shape="{network>shape}"
                            height="{network>height}"
                            width="{network>width}"
                            x="{network>x1}"
                            y="{network>y1}"
                            status="{network>status}"
                            

                            
                            
                            />
                            <!-- group="{network>group}"  -->
                            
                    </nodes>
                    <lines>
                        <networkgraph.Line 
                            from="{network>from}" 
                            to="{network>to}" />
                    </lines>
                </networkgraph.Graph>
            </m:IconTabFilter>

            </m:items>

        </m:IconTabBar>


    </m:Page>
</mvc:View>
